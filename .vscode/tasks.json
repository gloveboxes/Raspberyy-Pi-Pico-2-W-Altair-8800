{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Altair (Release)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Release && cmake --build build --target clean && cmake --build build && mkdir -p deploy && cp build/altair.uf2 deploy/",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Altair (Debug)",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
